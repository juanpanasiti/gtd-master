{
  "expo": {
    "name": "GTD Master",
    "slug": "gtd-master",
    "version": "1.8.0",
    "scheme": "gtdmaster",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f1f5f9"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "versionCode": 13,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f1f5f9"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.giosoft.gtdmaster"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      [
        "expo-calendar",
        {
          "calendarPermission": "The app needs to access your calendar to add tasks with due dates."
        }
      ],
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "InboxCount",
              "label": "Inbox Count",
              "minWidth": "100dp",
              "minHeight": "100dp",
              "description": "Shows the number of active tasks in your Inbox.",
              "previewImage": "./assets/icon.png"
            },
            {
              "name": "QuickAdd",
              "label": "Quick Capture",
              "minWidth": "60dp",
              "minHeight": "60dp",
              "description": "Quickly add a new task to your Inbox.",
              "previewImage": "./assets/icon.png"
            }
          ]
        }
      ]
    ],
    "web": {
      "favicon": "./assets/icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "1c8498d8-cd3e-4af0-8b43-553d7806aa7f"
      }
    }
  }
}